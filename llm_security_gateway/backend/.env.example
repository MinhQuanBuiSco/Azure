# Environment
ENVIRONMENT=development
DEBUG=true

# Azure AI Foundry
AZURE_AI_ENDPOINT=https://your-ai-foundry.openai.azure.com/
AZURE_AI_API_KEY=your-api-key
AZURE_AI_DEPLOYMENT_NAME=gpt-4o
AZURE_AI_API_VERSION=2024-10-21

# Azure Content Safety
AZURE_CONTENT_SAFETY_ENDPOINT=https://your-content-safety.cognitiveservices.azure.com/
AZURE_CONTENT_SAFETY_KEY=your-content-safety-key

# Redis
REDIS_URL=redis://localhost:6379

# Cosmos DB
COSMOS_CONNECTION_STRING=AccountEndpoint=https://your-cosmos.documents.azure.com:443/;AccountKey=your-key;

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# Security Settings
ENABLE_PROMPT_INJECTION_DETECTION=true
ENABLE_PII_DETECTION=true
ENABLE_SECRET_SCANNING=true
ENABLE_CONTENT_FILTERING=true
ENABLE_JAILBREAK_DETECTION=true
PII_ACTION=mask

# Logging
LOG_LEVEL=INFO
LOG_REQUESTS=true
LOG_RESPONSES=true

# CORS
CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]
