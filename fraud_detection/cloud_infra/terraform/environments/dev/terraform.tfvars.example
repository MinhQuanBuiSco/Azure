# Example terraform.tfvars file
# Copy this to terraform.tfvars and fill in your values

# Azure region
location = "eastus2"

# Resource group name
resource_group_name = "fraud-detection-dev-rg"

# AKS configuration
aks_cluster_name   = "fraud-detection-aks-dev"
kubernetes_version = "1.32.0"

# ACR configuration (must be globally unique, alphanumeric only)
acr_name = "frauddetectionacr12345"

# PostgreSQL configuration
postgres_name           = "fraud-detection-postgres-dev"
postgres_admin_username = "pgadmin"
postgres_admin_password = "ChangeMe123!@#" # Use a strong password

# Redis configuration
redis_name = "fraud-detection-redis-dev"
