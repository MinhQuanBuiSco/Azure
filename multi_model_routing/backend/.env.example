# Application
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Microsoft Foundry (Single account for OpenAI + Claude models)
# Resource name is the subdomain part of your endpoint
# e.g., if endpoint is https://my-ai-resource.services.ai.azure.com, use "my-ai-resource"
FOUNDRY_RESOURCE_NAME=your-foundry-resource-name
FOUNDRY_API_KEY=your-foundry-api-key
FOUNDRY_API_VERSION=2024-10-21

# Model deployment names (as configured in Foundry)
GPT4O_DEPLOYMENT=gpt-4o
GPT4O_MINI_DEPLOYMENT=gpt-4o-mini
CLAUDE_HAIKU_DEPLOYMENT=claude-haiku-4-5
CLAUDE_SONNET_DEPLOYMENT=claude-sonnet-4-5
CLAUDE_OPUS_DEPLOYMENT=claude-opus-4-5

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_SSL=false

# Cosmos DB
COSMOS_ENDPOINT=https://your-cosmos-account.documents.azure.com:443/
COSMOS_KEY=your-cosmos-key
COSMOS_DATABASE=llm_routing

# Budget defaults
DEFAULT_DAILY_BUDGET=100.0
DEFAULT_WEEKLY_BUDGET=500.0
DEFAULT_MONTHLY_BUDGET=2000.0

# Routing
COMPLEXITY_CACHE_TTL=300
EMBEDDING_MODEL=all-MiniLM-L6-v2

# CORS
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]
