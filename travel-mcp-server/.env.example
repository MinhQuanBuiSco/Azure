# Travel MCP Server - Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# Travel API Keys
# ===========================================

# SerpAPI - For flight and hotel search
# Get your key at: https://serpapi.com
SERPAPI_API_KEY=

# OpenWeather - For weather forecasts
# Get your key at: https://openweathermap.org/api
OPENWEATHER_API_KEY=

# Google Places - For attractions and restaurants
# Get your key at: https://console.cloud.google.com
GOOGLE_PLACES_API_KEY=

# ExchangeRate API - For currency conversion
# Get your key at: https://exchangerate-api.com
EXCHANGERATE_API_KEY=

# ===========================================
# Redis Configuration
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Cache TTL in seconds (default: 1 hour)
CACHE_TTL_SECONDS=3600

# ===========================================
# Server Configuration
# ===========================================
SERVER_NAME=travel-planner
SERVER_VERSION=0.1.0
DEBUG=false

# ===========================================
# Azure Configuration (for deployment)
# ===========================================
# AZURE_CLIENT_ID=
# AZURE_TENANT_ID=
# AZURE_SUBSCRIPTION_ID=
