# Finance Research Pipeline - Environment Variables

# Application
DEBUG=true
ENVIRONMENT=development
LOG_LEVEL=INFO
LOG_FORMAT=text

# LLM Provider Selection
# Options: azure_openai, azure_anthropic, openai, anthropic
LLM_PROVIDER=azure_openai

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-api-key
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o
AZURE_OPENAI_API_VERSION=2024-08-01-preview

# Azure AI Foundry (Anthropic) - Alternative to Azure OpenAI
# AZURE_AI_FOUNDRY_ENDPOINT=https://your-ai-foundry.azure.com/
# AZURE_AI_FOUNDRY_API_KEY=your-api-key
# AZURE_AI_FOUNDRY_MODEL=claude-3-5-sonnet

# Direct OpenAI (fallback)
# OPENAI_API_KEY=sk-your-key
# OPENAI_MODEL=gpt-4o

# Direct Anthropic (fallback)
# ANTHROPIC_API_KEY=sk-ant-your-key
# ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Research Tools
TAVILY_API_KEY=tvly-your-key
NEWSAPI_KEY=your-newsapi-key

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_SSL=false
CACHE_TTL_SECONDS=3600

# Cosmos DB (optional - for persistence)
# COSMOS_ENDPOINT=https://your-cosmos.documents.azure.com:443/
# COSMOS_KEY=your-cosmos-key
# COSMOS_DATABASE=finance_research

# CORS
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]
