# Example Terraform variables file
# Copy this file to terraform.tfvars and customize for your deployment

# Project Configuration
project_name        = "chatbot"
resource_group_name = "rg-chatbot-dev"
location            = "eastus"

# Network Configuration
vnet_address_space = ["10.0.0.0/16"]
aks_subnet_prefix  = ["10.0.1.0/24"]

# Azure Container Registry
# NOTE: ACR name must be globally unique and contain only alphanumeric characters
acr_name = "acrchatbotunique123" # Change this to something unique
acr_sku  = "Basic"

# Azure Kubernetes Service
aks_cluster_name   = "aks-chatbot"
aks_dns_prefix     = "chatbot"
kubernetes_version = "1.28"
aks_node_count     = 2
aks_vm_size        = "Standard_B2s" # Free tier eligible

# Azure OpenAI
# NOTE: You must have Azure OpenAI access approved before deploying
openai_account_name        = "openai-chatbot-unique" # Change this to something unique
openai_location            = "eastus"                 # Limited regions available
openai_sku                 = "S0"
openai_deployment_name     = "gpt-35-turbo"
openai_model_name          = "gpt-35-turbo" # or "gpt-4" if you have access
openai_model_version       = "0613"
openai_deployment_capacity = 10

# Tags
tags = {
  Environment = "Development"
  Project     = "Chatbot"
  ManagedBy   = "Terraform"
  Owner       = "YourName"
}
